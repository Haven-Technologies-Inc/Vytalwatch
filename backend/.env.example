# ReshADX Backend Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000

# ============================================================================
# CORS
# ============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reshadx
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# MONGODB
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/reshadx

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# ============================================================================
# KAFKA (Optional)
# ============================================================================
KAFKA_ENABLED=false
KAFKA_BROKERS=localhost:9092

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
MASTER_ENCRYPTION_KEY=your-master-encryption-key-32-characters-minimum

# ============================================================================
# ERROR TRACKING - Sentry
# ============================================================================
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================================================
# APM - New Relic
# ============================================================================
NEW_RELIC_ENABLED=false
NEW_RELIC_LICENSE_KEY=

# ============================================================================
# LOGGING - Elasticsearch
# ============================================================================
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================================================
# AWS
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=reshadx-uploads
AWS_S3_REGION=us-east-1
AWS_SES_ENABLED=false
AWS_SES_FROM_EMAIL=noreply@reshadx.com

# ============================================================================
# TWILIO (SMS)
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ============================================================================
# EMAIL
# ============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@reshadx.com

# ============================================================================
# THIRD-PARTY APIs - GHANA
# ============================================================================
# National Identification Authority (Ghana Card verification)
NIA_API_KEY=

# Social Security and National Insurance Trust
SSNIT_API_KEY=

# Ghana Interbank Payment and Settlement Systems
GHIPSS_API_KEY=

# ============================================================================
# MOBILE MONEY - Ghana
# ============================================================================
# MTN Mobile Money
MTN_MOMO_API_KEY=
MTN_MOMO_API_SECRET=
MTN_MOMO_SUBSCRIPTION_KEY=

# Vodafone Cash
VODAFONE_API_KEY=

# ============================================================================
# THIRD-PARTY APIs - NIGERIA
# ============================================================================
# Nigeria Inter-Bank Settlement System
NIBSS_API_KEY=

# National Identity Management Commission
NIMC_API_KEY=

# ============================================================================
# MOBILE MONEY - Kenya
# ============================================================================
# M-Pesa
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_PASS_KEY=

# ============================================================================
# COMPLIANCE
# ============================================================================
# OFAC Sanctions Screening
OFAC_API_KEY=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_FRAUD_DETECTION=true
FEATURE_CREDIT_SCORING=true
FEATURE_TRANSACTION_ENRICHMENT=true
FEATURE_PAYMENT_INITIATION=true
FEATURE_WEBHOOKS=true
FEATURE_GRAPHQL=false
FEATURE_WEBSOCKETS=true

# ============================================================================
# MONITORING
# ============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
