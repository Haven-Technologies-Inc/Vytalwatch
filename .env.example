# ============================================================
# VitalWatch AI - Monorepo Environment Variables
# ============================================================
# Copy this file to .env and fill in the values.
# Each workspace also has its own .env.example for workspace-specific vars.
# ============================================================

# ── General ──────────────────────────────────────────────────
NODE_ENV=development

# ── Backend (NestJS) ────────────────────────────────────────
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:3000

# ── Database (PostgreSQL) ───────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=vitalwatch
DB_SSL=false

# ── Redis ───────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ── InfluxDB (Time-Series) ─────────────────────────────────
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=vitalwatch-influx-token
INFLUXDB_ORG=vitalwatch
INFLUXDB_BUCKET=vitals

# ── JWT / Auth ──────────────────────────────────────────────
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# ── Security (Rate Limiting, Lockout, Password History) ─────
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=15
SECURITY_RATE_LIMIT_WINDOW_MINUTES=15
SECURITY_PASSWORD_HISTORY_COUNT=5
SESSION_TIMEOUT_MINUTES=15
MAX_CONCURRENT_SESSIONS=3

# ── NextAuth (Frontend) ────────────────────────────────────
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# ── OAuth Providers ─────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# ── Stripe (Payments) ──────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ── Twilio (SMS / 2FA) ─────────────────────────────────────
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# ── ZeptoMail (Zoho Transactional Email) ──────────────────
ZEPTOMAIL_TOKEN=Zoho-enczapikey_YOUR_ZEPTOMAIL_API_TOKEN_HERE
EMAIL_FROM=noreply@vytalwatch.ai
EMAIL_FROM_NAME=VytalWatch AI

# ── SMTP / Zoho (Fallback) ────────────────────────────────
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=VytalWatch AI

# ── OpenAI ──────────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4

# ── Grok AI ─────────────────────────────────────────────────
GROK_API_KEY=...
GROK_BASE_URL=https://api.x.ai/v1

# ── Tenovi (Device Integration) ────────────────────────────
TENOVI_API_KEY=...
TENOVI_WEBHOOK_SECRET=...
TENOVI_API_URL=https://api2.tenovi.com
TENOVI_CLIENT_DOMAIN=

# ── WebRTC TURN Server ─────────────────────────────────────
TURN_SERVER_URL=turn:localhost:3478
TURN_USERNAME=vitalwatch
TURN_PASSWORD=VitalWatch2024!
TURN_REALM=vitalwatch.local
TURN_TTL=3600

# ── Frontend Public Vars ───────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=http://localhost:3001
NEXT_PUBLIC_TURN_SERVER_URL=turn:localhost:3478
NEXT_PUBLIC_TURN_USERNAME=vitalwatch
NEXT_PUBLIC_TURN_CREDENTIAL=VitalWatch2024!
