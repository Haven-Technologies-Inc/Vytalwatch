# ============================================================
# VitalWatch Production Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ============================================================
# DOMAIN CONFIGURATION
# ============================================================
DOMAIN=vytalwatch.com
SERVER_IP=5.78.152.72

# ============================================================
# DATABASE - PostgreSQL
# ============================================================
DB_USERNAME=vitalwatch
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_DATABASE=vitalwatch_prod

# ============================================================
# REDIS CACHE
# ============================================================
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================================
# INFLUXDB - Time Series Database
# ============================================================
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
INFLUXDB_ORG=vitalwatch
INFLUXDB_BUCKET=vitals
INFLUXDB_TOKEN=CHANGE_THIS_GENERATE_SECURE_TOKEN

# ============================================================
# JWT AUTHENTICATION
# ============================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_GENERATE_64_CHAR_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_GENERATE_64_CHAR_SECRET
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================================
# ENCRYPTION
# ============================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_THIS_GENERATE_32_BYTE_HEX

# ============================================================
# STRIPE - Payment Processing
# ============================================================
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# ============================================================
# TWILIO - SMS & Voice
# ============================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# ============================================================
# OPENAI - AI Analysis
# ============================================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# ============================================================
# GROK AI - Alternative AI
# ============================================================
GROK_API_KEY=xai-xxxxxxxxxxxxxxxxxxxx

# ============================================================
# TENOVI - Device Integration
# ============================================================
TENOVI_API_KEY=your_tenovi_api_key
TENOVI_API_URL=https://api.tenovi.com

# ============================================================
# ZOHO - Email Service
# ============================================================
ZOHO_SMTP_HOST=smtp.zoho.com
ZOHO_SMTP_PORT=587
ZOHO_SMTP_USER=noreply@your-domain.com
ZOHO_SMTP_PASS=your_zoho_app_password
ZOHO_FROM_EMAIL=noreply@your-domain.com
ZOHO_FROM_NAME=VytalWatch AI

# ============================================================
# WEBRTC - Video Calls
# ============================================================
TURN_SERVER_URL=turn:your-domain.com:3478
TURN_SERVER_USERNAME=turnuser
TURN_SERVER_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================================
# GOOGLE OAUTH (Optional)
# ============================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================================
# MICROSOFT OAUTH (Optional)
# ============================================================
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ============================================================
# APPLE OAUTH (Optional)
# ============================================================
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
