# Messaging System Configuration

# Encryption Key (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
MESSAGING_ENCRYPTION_KEY=

# Frontend URL for WebSocket CORS
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Virus Scanning (Optional - for production use ClamAV or cloud service)
ENABLE_VIRUS_SCAN=true
VIRUS_SCAN_API_URL=
VIRUS_SCAN_API_KEY=

# Rate Limiting
MESSAGE_RATE_LIMIT_TTL=60000
MESSAGE_RATE_LIMIT_MAX=60

# Storage (S3, Azure Blob, etc.)
STORAGE_PROVIDER=s3
AWS_S3_BUCKET=
AWS_S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Redis (for WebSocket scaling - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
