# Create actual secret using: kubectl create secret generic vytalwatch-secrets --from-env-file=.env.production
apiVersion: v1
kind: Secret
metadata:
  name: vytalwatch-secrets
  namespace: vytalwatch-prod
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@postgres-service:5432/vytalwatch"
  DATABASE_HOST: "postgres-service"
  DATABASE_PORT: "5432"
  DATABASE_USERNAME: "vytalwatch_user"
  DATABASE_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  DATABASE_NAME: "vytalwatch"

  # Redis
  REDIS_URL: "redis://redis-service:6379"
  REDIS_HOST: "redis-service"
  REDIS_PORT: "6379"
  REDIS_PASSWORD: "CHANGE_ME_REDIS_PASSWORD"

  # JWT Secrets
  JWT_SECRET: "CHANGE_ME_LONG_RANDOM_STRING_FOR_JWT"
  JWT_REFRESH_SECRET: "CHANGE_ME_DIFFERENT_LONG_RANDOM_STRING"

  # Encryption
  ENCRYPTION_KEY: "CHANGE_ME_32_BYTE_ENCRYPTION_KEY"

  # Email (Zoho)
  SMTP_USER: "notifications@vytalwatch.com"
  SMTP_PASSWORD: "CHANGE_ME_SMTP_PASSWORD"
  EMAIL_FROM_ADDRESS: "notifications@vytalwatch.com"

  # Twilio
  TWILIO_ACCOUNT_SID: "CHANGE_ME_TWILIO_SID"
  TWILIO_AUTH_TOKEN: "CHANGE_ME_TWILIO_TOKEN"

  # OpenAI
  OPENAI_API_KEY: "CHANGE_ME_OPENAI_KEY"

  # Grok API
  GROK_API_KEY: "CHANGE_ME_GROK_KEY"

  # Stripe
  STRIPE_SECRET_KEY: "CHANGE_ME_STRIPE_SECRET"
  STRIPE_PUBLISHABLE_KEY: "CHANGE_ME_STRIPE_PUBLISHABLE"
  STRIPE_WEBHOOK_SECRET: "CHANGE_ME_STRIPE_WEBHOOK_SECRET"

  # Tenovi
  TENOVI_API_KEY: "CHANGE_ME_TENOVI_KEY"
  TENOVI_WEBHOOK_SECRET: "CHANGE_ME_TENOVI_WEBHOOK_SECRET"

  # Sentry (optional)
  SENTRY_DSN: ""

  # New Relic (optional)
  NEW_RELIC_LICENSE_KEY: ""
---
